---
// src/pages/login.astro
import Layout from "@/layouts/Layout.astro";
import "@/styles/base.css";
---

<Layout title="Login">
    <div class="max-w-md w-full m-auto">
        <form class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <div class="mb-4">
                <label
                    class="block text-gray-700 text-sm font-bold mb-2"
                    for="email"
                >
                    Email Address
                </label>
                <input
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                    id="email"
                    type="email"
                    placeholder="doctor@example.com"
                    required
                />
            </div>
            <div class="mb-6">
                <label
                    class="block text-gray-700 text-sm font-bold mb-2"
                    for="password"
                >
                    Password
                </label>
                <input
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
                    id="password"
                    type="password"
                    placeholder="******************"
                    required
                />
            </div>
            <div class="flex items-center justify-between mb-6">
                <div>
                    <label class="flex items-center">
                        <input
                            type="checkbox"
                            class="form-checkbox"
                            name="remember"
                        />
                        <span class="ml-2 text-sm text-gray-700"
                            >Remember me</span
                        >
                    </label>
                </div>
                <div>
                    <a
                        class="inline-block align-baseline font-bold text-sm text-accent hover:text-secondary"
                        href="/forgot-password"
                    >
                        Forgot Password?
                    </a>
                </div>
            </div>
            <div class="flex items-center justify-between">
                <button
                    class="bg-accent hover:bg-secondary text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full"
                    type="submit"
                >
                    Sign In
                </button>
            </div>
        </form>
        <p class="text-center text-gray-500 text-xs">
            Don't have an account? <a
                href="/register"
                class="text-accent hover:text-secondary">Register here</a
            >
        </p>
    </div>
</Layout>
